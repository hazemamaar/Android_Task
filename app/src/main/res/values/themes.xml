<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidTask" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AndroidTask" parent="Base.Theme.AndroidTask" />

    <style name="setup_ed_txt"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
        <!--         <item name="boxStrokeColor">@color/gray</item>-->
        <!--         <item name="strokeColor">@color/gray</item>-->
        <!--         <item name="strokeWidth">@dimen/_1sdp</item>-->
        <!--         <item name="boxStrokeWidth">1dp</item>-->
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperTextTextColor">@color/black_app</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/black_app</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
</resources>